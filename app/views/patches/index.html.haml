%form{action: patches_path, method: 'get'}
  = label_tag :patch_type, 'Patch type'
  = select_tag :patch_type, options_for_select([['Hanging baskets', 'Hanging baskets'], ['Window sill', 'Window sill'], ['Patio', 'Patio'], ['Roof garden', 'Roof garden'], ['Front garden', 'Front garden'], ['Back yard', 'Back yard'], ['Lawn', 'Lawn'], ['Patch in your garden', 'Patch in your garden'], ['Other', 'Other']])
  = submit_tag 'Filter', name: nil

- if @patches
  %ul
    - @patches.each do |patch|
      %li
        %span.location= patch.location
        %span.patch_type= patch.patch_type
        %span.duration= patch.duration
- else
  %div Sorry, no patches to display